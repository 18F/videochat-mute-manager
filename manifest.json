{
  "manifest_version": 2,

  "name": "Acano Auto-mute",
  "description": "This extension keeps your microphone muted in Acano unless you hold down the space bar",
  "version": "0.3",

  "content_scripts": [
    {
      "matches": [
        "https://join.mycospace.com/*"
      ],
      "js" : ["jquery-1.12.1.min.js","lib/acano.js"]
    },
    {
      "matches": [
        "https://appear.in/*"
      ],
      "js" : ["jquery-1.12.1.min.js","lib/appearin.js"]
    },
    {
      "matches": [
        "https://plus.google.com/hangouts/_/*/*"
      ],
      "js" : ["jquery-1.12.1.min.js","lib/hangouts.js"]
    }
  ]
}
